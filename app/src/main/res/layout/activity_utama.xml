<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnlogout"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_account_circle_24"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/judul1"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:src="@drawable/komponen1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/judul2"
                android:fontFamily="@font/poppinsbold"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="@color/warna4"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:id="@+id/btkategori1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/hardware"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HARDWARE"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="@color/warna4"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:id="@+id/btkategori2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/software"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SOFTWARE"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="@color/warna4"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:id="@+id/btkategori3"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/tools"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOOLS"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>